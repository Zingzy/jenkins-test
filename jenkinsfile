pipeline {
    agent { 
        node {
            label 'python'
        }
    }
    triggers {
        pollSCM('H/5 * * * *')
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh '''
                    cd sample
                    pip install -r requirements.txt
                '''
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh '''
                    cd sample
                    python3 main.py --name=John
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver...'
                sh '''
                    cd sample
                    python3 main.py
                '''
            }
        }
    }
}